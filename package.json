{
  "name": "steeplejack",
  "version": "2.0.0-50",
  "description": "An easy way of making a Twelve Factor App in NodeJS",
  "main": "./index",
  "nyc": {
    "all": true,
    "check-coverage": true,
    "cache": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/*.js",
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "clean": "rm -Rf ./build ./coverage",
    "ci": "npm test -s && npm run coverage -s && npm run compile -s",
    "compile": "npm run clean && npm run compile:js -s && npm run copy",
    "compile:js": "babel --source-maps=inline --out-dir ./build ./src",
    "copy": "cp package.json build; cp LICENSE build; cp README.md build",
    "coverage": "cross-env NODE_ENV=test nyc mocha --ui bdd --recursive test/unit",
    "postversion": "git push --tags && git push",
    "test": "npm run test:lint -s && npm run test:unit -s",
    "test:e2e": "mocha --compilers js:babel-register --throw-deprecation --ui bdd --full-trace --recursive test/e2e/test",
    "test:lint": "eslint src",
    "test:unit": "mocha --compilers js:babel-register --throw-deprecation --ui bdd --full-trace --recursive test/unit",
    "watch:coverage": "nodemon --exec 'npm run coverage -s' --legacy-watch",
    "watch:test": "nodemon --exec 'npm run test -s' --legacy-watch",
    "watch:test:e2e": "nodemon --exec 'npm run test:e2e -s' --legacy-watch",
    "watch:test:lint": "nodemon --exec 'npm run test:lint -s' --legacy-watch",
    "watch:test:unit": "nodemon --exec 'npm run test:unit -s' --legacy-watch"
  },
  "author": "Simon Emms <simon@simonemms.com>",
  "license": "MIT",
  "dependencies": {
    "@steeplejack/core": "^1.0.0",
    "glob": "^7.1.1",
    "lodash": "^4.17.4",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-preset-env": "^1.1.8",
    "babel-register": "^6.18.0",
    "bluebird": "^3.4.7",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "cross-env": "^3.1.4",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-classes": "^0.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.0.0",
    "proxyquire": "^1.7.10",
    "restify": "^4.3.0",
    "sinon": "^1.17.7",
    "sinon-as-promised": "^4.0.2",
    "sinon-chai": "^2.8.0",
    "socket.io": "^1.7.2",
    "supertest": "^2.0.1",
    "supertest-as-promised": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/riggerthegeek/steeplejack.git"
  },
  "bugs": {
    "url": "https://github.com/riggerthegeek/steeplejack/issues"
  },
  "homepage": "http://steeplejack.info",
  "directories": {
    "doc": "docs",
    "test": "test"
  }
}
